# Ada Personal AI Assistant - Environment Variables
# Copy this file to .env and customize the values

# ====================================
# Core Configuration
# ====================================

# Ada's personality and behavior settings
ADA_NAME="Ada"
ADA_VERSION="1.0.0"
ADA_DEBUG=false

# ====================================
# Neural Network Configuration  
# ====================================

# Device selection (auto, mps, cuda, cpu)
ADA_DEVICE="auto"

# Training parameters
ADA_LEARNING_RATE=0.001
ADA_EPOCHS=5
ADA_BATCH_SIZE=32

# Model file paths
ADA_MODEL_PATH="ada/storage/checkpoints/ada_core.pt"
ADA_CHECKPOINTS_DIR="ada/storage/checkpoints"

# ====================================
# Database Configuration
# ====================================

# SQLite database path
ADA_DB_PATH="ada/storage/conversations.db"

# Database settings
ADA_DB_MAX_AGE_DAYS=30
ADA_DB_AUTO_CLEANUP=true

# ====================================
# Interface Configuration
# ====================================

# CLI settings
ADA_CLI_HISTORY_FILE="ada/storage/cli_history.txt"
ADA_CLI_MAX_HISTORY=100

# Event loop settings  
ADA_EVENT_HEARTBEAT_INTERVAL=60

# ====================================
# Voice Configuration (Phase 2)
# ====================================

# Speech recognition (Future: Whisper.cpp)
ADA_VOICE_INPUT_ENABLED=false
ADA_VOICE_SAMPLE_RATE=16000
ADA_VOICE_LANGUAGE="en"

# Text-to-speech (Future: Piper)
ADA_VOICE_OUTPUT_ENABLED=false
ADA_VOICE_VOICE="default"
ADA_VOICE_SPEED=1.0
ADA_VOICE_VOLUME=0.8

# ====================================
# Memory and RL Configuration
# ====================================

# Conversation memory
ADA_MEMORY_MAX_CONVERSATIONS=1000
ADA_MEMORY_CONTEXT_LENGTH=10

# Reinforcement learning
ADA_RL_EPSILON=0.1
ADA_RL_GAMMA=0.95
ADA_RL_REPLAY_BUFFER_SIZE=1000

# ====================================
# Reward System
# ====================================

# Rule-based rewards
ADA_REWARD_BASE=0.5
ADA_REWARD_GREETING_BONUS=0.2
ADA_REWARD_LENGTH_BONUS=0.1
ADA_REWARD_QUALITY_THRESHOLD=0.7

# ====================================
# Logging and Debug
# ====================================

# Logging configuration
ADA_LOG_LEVEL="INFO"
ADA_LOG_FILE="ada/storage/ada.log"
ADA_LOG_MAX_SIZE_MB=10
ADA_LOG_COLOR_OUTPUT=true
ADA_LOG_VERBOSE=false

# Development settings
ADA_DEV_RUN_TESTS_ON_STARTUP=false
ADA_DEV_SAVE_INTERMEDIATE_MODELS=true

# ====================================
# macOS Specific Settings
# ====================================

# Apple Silicon optimizations
ADA_MACOS_USE_MPS=true
ADA_MACOS_MPS_MEMORY_FRACTION=0.8
ADA_MACOS_DATA_DIR="~/Library/Application Support/Ada"

# ====================================
# Security (Future Features)
# ====================================

# API keys for external services (if needed)
# OPENAI_API_KEY=""
# HUGGINGFACE_TOKEN=""
# CUSTOM_API_KEY=""

# ====================================
# Performance Tuning
# ====================================

# Hardware optimization
ADA_MAX_WORKERS=4
ADA_CACHE_SIZE_MB=512

# ====================================
# Future Phase Configuration
# ====================================

# Phase 2+ features
ADA_MULTI_MODAL=false
ADA_PERSONALITY_LEARNING=false
ADA_CLOUD_BACKUP=false

# External model integration
ADA_USE_EXTERNAL_MODELS=false